<section class="mx-5 mb-5">
   <a href='/dashboard' class="text-primary"> &larr; Back to dashboard</a>
    <form class='edit-post-form'>
         <h2> Edit Post </h2>
         <input name="post-title" type="text" class="form-control-m mb-3" value="{{post.title}}" />
         <textarea name='post-body' class='form-control mb-3' rows="10">{{post.post_body}}</textarea>
        <div>
            {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
        </div>
      <a href="/post/{{post.id}}"> <button type="submit" class='btn btn-primary'>Save post</button></a>
      <button type="button" class='delete-post-btn btn btn-danger'>Delete post</button>

    </form>
</section>
{{> comments post.comments}}
<section class ="mx-5">
<form class="coment-form">
    <div>
        <textarea name="comment-body" class='mb-3' rows="3"></textarea>
    </div>

    <div>
        <button type="submit" class='btn btn-primary'>add comment</button>
    </div>
</form>
</section>


<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>